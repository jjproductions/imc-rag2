# Core
API_KEY=local-key

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=imc_corpus

# Embeddings
EMBEDDING_MODEL=BAAI/bge-m3

# LLM (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b-instruct-q4_0
TEMPERATURE=0.2
MAX_TOKENS=1024

# Retrieval & Chunking
TOP_K=5
CHUNK_SIZE=800
CHUNK_OVERLAP=100

# Offline / cache
TRANSFORMERS_OFFLINE=0
HF_HOME=/models